<mujoco model="wiping_hand">
    <asset>
        <!-- <mesh name="hand_3finger" file="meshes/jaco_three_finger_gripper/hand_3finger.stl" /> -->
        <mesh name="wipe_eef" file="meshes/panda_wipe/wipe_eef.stl" scale="0.001 0.001 0.001" />
        <!-- Materials for robot -->
        <!-- <material name="grey_plastic_hand" texture="grey_plastic_tex" rgba="0.88 0.86 0.86 1" /> -->
    </asset>
    <worldbody>
        <body name="wiping_gripper" pos="0 0 0.0494" quat="0.707107 0 0 -0.707107" >

            <site name="ft_frame" pos="0 0 0" size="0.0001" rgba="1 1 0 0" type="sphere" group="1"/>
            <inertial pos="0.00 0.001 -0.018" mass="0.709" diaginertia="55e-8 54e-8 53e-8"/>

            <geom type="mesh" pos="0 0 0.0" name="wiping_surface_vis" mesh="wipe_eef" contype="1" group="1" solimp="0.2 0.9 0.01" solmix="10000" solref="0.05 1" rgba="0.25 0.25 0.25 1" />
            <geom type="sphere" group="0" pos="0 0.025 0.0536" size="0.001" name="wiping_corner1" solimp="0.0 0.1 0.01" solmix="10000" solref="1 2" rgba="1 0 0 1" friction="0.001 0.005 0.0001"/>            
            <site type="sphere" rgba="1 0 0 1" pos="0 0.025 0.0536" size="0.001" name="wiping_corner1_site"/>

            <geom type="sphere" group="0" pos="0.025 0.0 0.0536" size="0.001" name="wiping_corner2" solimp="0.0 0.1 0.01" solmix="10000" solref="1 2" rgba="0 1 0 1" friction="0.001 0.005 0.0001"/>
            <site type="sphere" rgba="0 1 0 1" pos="0.025 0.0 0.0536" size="0.001" name="wiping_corner2_site"/>
                                    
            <geom type="sphere" group="0" pos="-0.025 0.0 0.0536 " size="0.001" name="wiping_corner3" solimp="0.0 0.1 0.01" solmix="10000" solref="1 2" rgba="0 0 1 1" friction="0.001 0.005 0.0001"/>
            <site type="sphere" rgba="0 0 1 1" pos="-0.025 0.0 0.0536 " size="0.001" name="wiping_corner3_site"/>
 
            <geom type="sphere" group="0" pos="0.0 -0.025 0.0536" size="0.001" name="wiping_corner4" solimp="0.0 0.1 0.01" solmix="10000" solref="1 2" rgba="1 1 0 1" friction="0.001 0.005 0.0001"/>
            <site type="sphere" rgba="1 1 0 1" pos="0.0 -0.025 0.0536" size="0.001" name="wiping_corner4_site"/>
                                    
 
            <!-- < This site was added for visualization import to match pos with geometry above> -->
            <body name="eef" pos="0 0 0.0536" quat="1 0 0 0"> 
                <site name="grip_site" pos="0 0 0" size="0.001 0.001 0.001" rgba="1 0 0 0.5" type="sphere" group="1"/>
                <site name="ee_x" pos="0 0 0" size="0.005 .1"  quat="0.707105  0 0.707108 0 " rgba="1 0 0 0" type="cylinder" group="1"/>
                <site name="ee_y" pos="0 0 0" size="0.005 .1" quat="0.707105 0.707108 0 0" rgba="0 1 0 0" type="cylinder" group="1"/>
                <site name="ee_z" pos="0 0 0" size="0.005 .1" quat="1 0 0 0" rgba="0 0 1 0" type="cylinder" group="1"/>
                <!-- This site was added for visualization. -->
                <site name="grip_site_cylinder" pos="0 0 0" size="0.005 10" rgba="0 1 0 0.3" type="cylinder" group="1"/>
            </body>
        </body>
    </worldbody>
    <sensor>
        <force name="force_ee" site="ft_frame"/>
        <torque name="torque_ee" site="ft_frame"/>
        <touch name="touch1" site="wiping_corner1_site"/>
        <touch name="touch2" site="wiping_corner2_site"/>
        <touch name="touch3" site="wiping_corner3_site"/>
        <touch name="touch4" site="wiping_corner4_site"/>
    </sensor>
</mujoco>
